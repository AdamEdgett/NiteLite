{
  "name": "NiteLite",
  "description": "Switches sites to dark mode after sunset",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "NiteLite"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*"
      ],
      "css": [
        "./css/google.css"
      ],
      "js": ["./index.js"],
      "run_at": "document_end"
    }
  ],

  "manifest_version": 2
}
